%script{:type => "text/javascript", :src => "/js/highslide/highslide.js"}
%script{:type => "text/javascript", :src => "/js/highslide/highslide-with-html.js"}
:javascript
  hs.graphicsDir = '/js/highslide/graphics/';
  hs.outlineType = 'rounded-white';
  hs.wrapperClassName = 'draggable-header';

%div#content
  %div.page_navi
    - unless @page.first_page?
      %span
        %a{:href => "/recent/#{@page.prev_page}"} &#171; Prev
    %span= "[ #{@page.current_page} / #{@page.page_count} ]"
    - unless @page.last_page?
      %span
        %a{:href => "/recent/#{@page.next_page}"} Next &#187;

  %div#main{:class => "highslide-gallery"}
    - @posts.each do |post|
      %div.photo
        %div.thumbnailBox
          %a.highslide{:href => '/images/' + post.photo.path, :onclick => "return hs.expand(this)"}
            %img{:src => '/images/' + post.photo.thumbnail_path}
        %div.control
          %ul
            %li
              %a{ :href => ('/post/' + post.id.to_s + '.edit'), :onclick => "return hs.htmlExpand(this, { objectType: 'ajax', width: 500, height: 300 } )" } edit
            %li
              %a{ :href => ('/post/' + post.id.to_s + '.delete') } delete
        %div.photoTitle= post.title || "(no title)"
        %div.photoInfo
          %table
            %tr
              %th
                Id:
              %td
                = h post.id
            %tr
              %th
                Source:
              %td
                %a{:href => post.url}= h post.url
            %tr
              %th
                Webpage:
              %td
                %a{:href => post.page_url}= h post.page_url
            %tr
              %th
                Size:
              %td
                = h(post.photo.width.to_s + "x" + post.photo.height.to_s)
            %tr
              %th
                File size:
              %td
                = h post.photo.filesize
            %tr
              %th
                MD5:
              %td
                = h post.photo.md5
            %tr
              %th
                Tags:
              %td
                = h post.photo.taggings.map{|t| t.tag.name}.join(' ')
            %tr
              %th
                Posted:
              %td
                = h post.date

  %div.page_navi
    - unless @page.first_page?
      %span
        %a{:href => "/recent/#{@page.prev_page}"} &#171; Prev
    %span= "[ #{@page.current_page} / #{@page.page_count} ]"
    - unless @page.last_page?
      %span
        %a{:href => "/recent/#{@page.next_page}"} Next &#187;
