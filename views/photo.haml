%div#main
  %div#photo
    %a{:href => '/images/' + @photo.path}
      %img{:src => '/images/' + @photo.sample_path}
  %div#photoInfo
    %table
      %tr
        %th
          Size:
        %td
          = h(@photo.width.to_s + "x" + @photo.height.to_s)
      %tr
        %th
          File size:
        %td
          = h @photo.filesize
      %tr
        %th
          MD5:
        %td
          = h @photo.md5
      %tr
        %th
          Sources:
        %td
          %ul
            - @posts.each do |post|
              %li
                %a{:href => post.url}= h post.url
