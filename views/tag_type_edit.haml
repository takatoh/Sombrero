%div#sidebar
  %ul
    %li
      %a{:href => "/tags/1"} Tags
    %li
      %a{:href => "/tagtypes/1"} Tag types

%div#main
  %h2 Edit tag

  %form{ :action => "/tagtypes/edit/#{@tag_type.id}", :method => "POST" }
    %input{ :type => "hidden", :name => "_method", :value => "PUT" }
    %table
      %tr
        %td Id:
        %td= @tag_type.id
      %tr
        %td Name:
        %td
          %input{ :type => "text", :name => "name", :size => 80, :value => @tag_type.name }
      %tr
        %td Description:
        %td
          %input{ :type => "text", :name => "description", :size => 80, :value => @tag_type.description }
      %tr
        %td
        %td
          %input{ :type => "submit", :value => "Save" }
